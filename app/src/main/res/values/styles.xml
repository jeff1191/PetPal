<resources xmlns:android="http://schemas.android.com/tools">
    <!-- | SPINNER |  -->

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:dropDownSpinnerStyle">@android:style/Widget.Spinner.DropDown</item>
        <item name="android:spinnerItemStyle">@android:style/Widget.TextView.SpinnerItem</item>
    </style>
